= form_for @meeting do |f|
  - if @meeting.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting.errors.count, "error")} prohibited this meeting from being saved:"
      %ul
        - @meeting.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :performer_name
    = f.text_field :performer_name
  .field
    = f.label :performer_country
    = f.text_field :performer_country
  .field
    = f.label :duration
    = f.datetime_select :duration
  .field
    = f.label :time
    = f.datetime_select :time
  .field
    = f.label :customer_name
    = f.text_field :customer_name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
