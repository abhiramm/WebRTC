{{#link-to 'new_meetings' class="btn btn-success" }}Create Session{{/link-to}}
<br/>
<br/>
<div class="table-responsive">
<table class="table table-bordered table-hover table-striped">
  <thead>
    <tr>
      <th>Session</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
      
      {{#each model}}
      {{#if id }}
      <tr>
       <td> {{performerName}} - {{customerName}}  </td> 
       <td> {{duration}} </td> 
       <td> {{description}} </td> 
       <td> <a href="/home/call/?id={{unbound id}}">Go to session</a></td>
      </tr>
      {{/if}}
      {{/each}}
    
  
  </tbody>
</table>
</div>
